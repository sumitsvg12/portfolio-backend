<!DOCTYPE html>
<html>
<head><title>Edit Project</title></head>
<body>
  <h2>Edit Project</h2>
  <form method="POST" action="/api/updateProject/edit/<%= project._id %>" enctype="multipart/form-data">
    <input type="text" name="title" value="<%= project.title %>" required /><br />
    <textarea name="description" required><%= project.description %></textarea><br />
    <input type="text" name="liveLink" value="<%= project.liveLink %>" required /><br />
    <input type="text" name="githubLink" value="<%= project.githubLink %>" required /><br />
    <p>Current Image:</p>
    <img src="<%= project.image %>" width="200" /><br />
    <input type="file" name="image" /><br />
    <button type="submit">Update</button>
  </form>
</body>
</html>
